Geometry = GenFormat {
    <<< Ordered_PL.gen
}

Transport {
    Device {
      AtomRange = 1 48
      FirstLayerAtoms = 1 9 17 25 33 41
    }
    Contact {
        <<+ "Contact.wire"
    }
}

#Driver = SteepestDescent {
#  MovedAtoms = 1:8
#}

Driver = {}

Hamiltonian = DFTB {
    MaxAngularMomentum = {
      C = p
      H = s
    }
    Filling = Fermi {
      Temperature [Kelvin] = 300
    }
    SlaterKosterFiles = Type2Filenames {
      Separator = "-"
      Suffix = ".skf"
    }

    Solver = GreensFunction {
      RealAxisPoints = 500
      EnclosedPoles = 50
      ContourPoints = {
          100 100
      }
    }

}

Parallel{
    # Reduce block size to allow multiple processors testing
    Blacs{BlockSize=2}
    # Allow OMP threads explicitely to test for hybrid parallelisation with
    # MPI-binary. (Check the manual before using this in production runs!)
    UseOmpThreads = Yes
}

Options = {
    WriteAutotestTag = Yes
}

Analysis = {
  CalculateForces = Yes
  TunnelingAndDOS {
    WriteLDOS = Yes
    WriteTunn = No
    EnergyRange [eV] = -5.257 -4.457
    EnergyStep [eV] = 0.01
    Region {
       Atoms = 1:48
       Label = "wireEnd"
    }
  }
}

ParserOptions = {
    ParserVersion = 7
}
