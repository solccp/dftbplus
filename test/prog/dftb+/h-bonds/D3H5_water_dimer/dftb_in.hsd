Geometry = GenFormat {
6  C
O H 
1 1 -0.702196 -0.056060 0.009942
2 2 -1.022193 0.846776 -0.011489
3 2 0.257521 0.042121 0.005219
4 1 2.220871 0.026717 0.000620
5 2 2.597493 -0.411663 0.766745
6 2 2.593135 -0.449496 -0.744782
}
Hamiltonian = DFTB {
  SCC = Yes
  MaxSCCIterations = 199
  SCCTolerance = 1.0e-05
  SpinPolarisation = {}
  Mixer = Broyden {
    MixingParameter = 0.2
  }
  Charge = 0
  SlaterKosterFiles = Type2FileNames {
    Separator = -
    Suffix = .skf
    LowerCaseTypeName = No
  }
  MaxAngularMomentum =  {
    O = p
    H = s
  }
  Filling = Fermi {
    Temperature [Kelvin] = 0.0
  }
  HCorrection = H5 {
    RScaling = 0.714
    WScaling = 0.25
    H5Scaling = {
      O = 0.06
    }
  }
  ThirdOrderFull = Yes
  HubbardDerivs {
    O = -0.1575
    H = -0.1857
  }
  Dispersion = DftD3 {
    Damping = ZeroDamping {
      sr6 = 1.25
      alpha6 = 29.61
    }
    s6 = 1.0
    s8 = 0.49
    HHRepulsion = Yes
  }
}
Options =  {
  WriteAutotestTag = Yes
}

Analysis {
    CalculateForces = Yes
}

ParserOptions =  {
  ParserVersion = 5
}

Parallel {
  # Allow OMP threads explicitely to test for hybrid parallelisation with
  # MPI-binary. (Check the manual before using this in production runs!)
  UseOmpThreads = Yes
}
