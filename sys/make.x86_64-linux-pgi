# -*- makefile -*-
############################################################################
# pgfortran/pgcc 17.10
############################################################################

PGI_LIBDIR = /opt/pgi/linux86-64/17.10/lib

ifeq ($(strip $(WITH_MPI)),1)
############################################################################
# MPI settings
############################################################################

# Compilers
FXX = mpifort
CC = pgcc

# Compiler options
FXXOPT = -O2 -Mallocatable=03
CCOPT = -O2

# Linker
LN = $(FXX)
LNOPT =

# How to link specific libraries

# ScaLAPACK
LIB_SCALAPACK = -L$(PGI_LIBDIR)/scalapack/scalapack-2.0.2/openmpi-2.1.2/lib -lscalapack

# LAPACK/BLAS
ATLASDIR = /usr/lib
LIB_LAPACK = -L$(PGI_LIBDIR) -llapack -lblas

# Any other libraries to be linked
OTHERLIBS =

# M4 preprocessor settings
M4 = m4
M4OPT =

# Command to run the test binary
TESTRUNNER = mpirun -n $(TESTPROC)

else
############################################################################
# NON-MPI settings
############################################################################

# Compilers
FXX = pgfortran
CC = pgcc

# Compile options
FXXOPT = -O2 -Mallocatable=03 -mp
CCOPT = -O2

# Linker
LN = $(FXX)
LNOPT =

# How to link specific libraries

# LAPACK/BLAS
# Consider using a threaded LAPACK/BLAS implementation for full performance
LIB_LAPACK = -L$(PGI_LIBDIR) -llapack -lblas

# Any other libraries to be linked
OTHERLIBS =

# Command to run a binary
TESTRUNNER =

endif

############################################################################
# General settings
############################################################################

# Preprocessor
FYPP = $(ROOT)/external/fypp/bin/fypp
FYPPOPT =

# Library options in general
LIBOPT =

############################################################################
# Developer settings
############################################################################

# Override options for different DEBUG modes
ifeq ($(strip $(DEBUG)),1)
    FXXOPT = -g -traceback -Mallocatable=03
endif
ifeq ($(strip $(DEBUG)),2)
    FXXOPT = -g -C -Mchkptr -traceback -Mallocatable=03
endif
